@model MainCategoryUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "_AdminLayout";
}

<div class="form">

   <form asp-action="UpdateCategory" asp-controller="MainCategory">
       <div asp-validation-summary="All" class="text-danger" ></div>
       <input type="hidden" asp-for="Id" />
       <div class="row">
       <div class="col">
           <label asp-for="Name" ></label>
           <input type="text"  asp-for="Name" maxlength="30" minlength="2" placeholder="enter name" class="form-control" autofocus>
       </div>     
       </div>
       <input type="submit" value="Update" class="bt" >
   </form>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}